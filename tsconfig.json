{
	"compilerOptions": {
		/**** Language and Environment ****/
		"target": "es2017",
		"lib": ["es2019"],
		/**** Modules ****/
		"module": "NodeNext",
		"rootDir": "src",
		"moduleResolution": "NodeNext",
		/**** Emit ****/
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		/* Type Checking */
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"exclude": ["**/tests/*", "**/jest.config.ts"],
	"ts-node": {
		"esm": true
	}
}
